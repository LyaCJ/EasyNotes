<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/simple_note_card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_gravity="start">
        <TableLayout
            android:id="@+id/grid_image_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2"
            android:columnOrderPreserved="false"
            android:orientation="horizontal"
            android:outlineProvider="paddedBounds"
            android:padding="0dp"
            android:useDefaultMargins="false"
            android:measureWithLargestChild="true"
            android:baselineAligned="false">
        </TableLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sn_created"
                android:text="Created: 2 Days Ago"
                android:textSize="10sp"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sn_lastmodified"
                android:text="Last Modified: Moments Ago"
                android:textSize="10sp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/sn_created"
                android:layout_margin="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sn_title"
                android:text="@string/lorem_ipsum"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:lines="1"
                android:ellipsize="end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sn_content"
                android:layout_below="@+id/sn_title"
                android:text="@string/hello_blank_fragment"
                android:maxLines="2"
                android:lines="2"
                android:ellipsize="end" />
        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
