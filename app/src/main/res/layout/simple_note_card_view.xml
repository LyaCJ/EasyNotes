<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simple_note_card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start">

        <LinearLayout
            android:id="@+id/image_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#FF33B5E5"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:text="Tile1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#FF33B5E5"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:text="Tile2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#FF33B5E5"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:text="Tile1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#FF33B5E5"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:text="Tile2" />
        </LinearLayout>

        <TextView
            android:id="@+id/sn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_preview"
            android:layout_margin="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sn_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sn_title"
            android:layout_margin="6dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="@string/content" />

        <TextView
            android:id="@+id/sn_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sn_content"
            android:layout_margin="2dp"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/content"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/sn_lastmodified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/sn_content"
            android:layout_margin="2dp"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/content"
            android:textSize="8sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
